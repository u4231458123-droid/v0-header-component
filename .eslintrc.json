{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "react/no-unescaped-entities": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-explicit-any": "warn",
    "prefer-const": "warn",
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error"]
      }
    ],
    "react-hooks/exhaustive-deps": "warn",
    "react/jsx-key": "warn",
    "@typescript-eslint/no-non-null-assertion": "warn"
  },
  "ignorePatterns": [
    "node_modules",
    ".next",
    "dist",
    "build",
    "coverage",
    "*.config.js",
    "*.config.mjs"
  ]
}
